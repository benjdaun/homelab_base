vrrp_instance VI_1 {
    state {{ 'MASTER' if inventory_hostname == groups['master'][0] else 'BACKUP' }}
    interface ens3
    virtual_router_id 51
    priority {{ 100 if inventory_hostname == groups['master'][0] else 90 }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass dummy
    }
    virtual_ipaddress {
        {{ keepalived_vip }}
    }
}
